  <head>
    <title>Contact form</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">
    <style>
      html, body {
      min-height: 100%;
      padding: 0;
      margin: 0;
      font-family: Roboto, Arial, sans-serif;
      font-size: 14px;
      color: #666;
      }
      h1 {
      margin: 0 0 20px;
      font-weight: 400;
      color: #ffb700;
      }
      p {
      margin: 0 0 5px;
      }
      .main-block {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background: #27607a;
      }
      form {
      padding: 100px;
      margin: 100px;
      box-shadow: 0 2px 5px #ffb700;; 
      background: #ffb700;; 
      border:solid;
      border-width: 3px;
      border-color: #27607a;
      height: larger;
      width: larger;
      }
      .fas {
      margin: 25px 10px 0;
      font-size: 100px;
      color: #fff;
      }
      .fa-envelope {
      transform: rotate(-20deg);
      }
      .fa-at , .fa-mail-bulk{
      transform: rotate(10deg);
      }
      input, textarea {
      width: calc(100% - 18px);
      padding: 8px;
      margin-bottom: 20px;
      border: 1px solid #ffb700;
      outline: none;
      }
      input::placeholder {
      color: #666;
      }
      button {
      width: 100%;
      padding: 10px;
      border: none;
      background: #27607a; 
      font-size: 16px;
      font-weight: 400;
      color: #fff;
      }
      @media (min-width: 568px) {
      .main-block {
      flex-direction: row;
      }
      }
    </style>
  </head>

   <%-include('navbar.ejs')%>
  <body style="background-color:#27607a">
    <div class="main-block">
        <h3 style="color: #27607a; text-align: center">Lets Start Finding!</h3>
        <p style="color: #27607a; text-align: center">Please plug in your Age Range, preferred State, and Purpose below:</p>
        <hr>
        <div class="info" style="padding-right: 550px;">
          <form method="POST" action="/engine" style="background-color: #ffb700;">
            <h5 style="color: #27607a">Age:</h5>
            <select name="Age" required>
                <option value="Adult">I'm above the age of 18</option>
                <option value="Youth">I'm under the age of 18</option>
